<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/backGround">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <GridLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="3"
            android:columnCount="1"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false">



            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                app:cardBackgroundColor="@color/backGround"
                app:cardUseCompatPadding="true"
                app:cardElevation="12dp"
                android:outlineSpotShadowColor="@color/greenShadow"


                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.8"
                        android:textSize="35sp"
                        android:textColor="#34AA5C"
                        tools:ignore="InvalidId"
                        android:layout_gravity="right"
                        android:layout_marginRight="70dp"
                        android:layout_marginTop="30dp"

                        />
                    <ImageView
                        android:layout_width="190dp"
                        android:layout_height="190dp"
                        android:src="@drawable/globe1"
                        android:layout_gravity="left"
                        android:layout_marginTop="-80dp"/>


                    <ProgressBar
                        android:id="@+id/progress_horizontal"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="160dp"
                        android:progressDrawable="@drawable/pb_drawable_1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:progress="100"
                        android:max="5"
                        android:layout_marginTop="-80dp"
                        android:layout_marginRight="5dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem Ipsun!"
                        android:textSize="25sp"
                        android:textColor="#34AA5C"
                        android:layout_gravity="right"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="30dp"
                        android:textStyle="italic"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:onClick="otvorChladnicku"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp"
                android:id="@+id/testovanie">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/chladnicka"
                        android:layout_gravity="left"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Moja chladnička"
                        android:textSize="28sp"
                        android:textColor="#000000"
                        android:layout_marginTop="-56dp"
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_margin="12dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:src="@drawable/stonks"
                        android:layout_gravity="left"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Viacej štatistík"
                        android:textSize="28sp"
                        android:textColor="#000000"
                        android:layout_marginTop="-46dp"
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>






        </GridLayout>

        <ImageButton
            android:id="@+id/tlacidlo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorBackground"
            android:contentDescription="button opening camera"
            android:onClick="scanCode"
            android:orientation="vertical"
            app:srcCompat="@drawable/testing" />

    </LinearLayout>

</ScrollView>